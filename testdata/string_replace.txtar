String replace function.

-- values.yaml --
name: hello-world
-- input.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: test
data:
  replaced: {{ .Values.name | replace "-" "_" }}
-- helm_output.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: test
data:
  replaced: hello_world
-- output.cue --
import "strings"

#values: {
	name?: _
	...
}

apiVersion: "v1"
kind: "ConfigMap"
metadata: {
	name: "test"
}
data: {
	replaced: strings.Replace(#values.name, "-", "_", -1)
}
