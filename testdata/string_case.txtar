String case functions: upper, lower, title.
No semantic comparison since CUE's ToTitle differs from Sprig's title.

-- values.yaml --
name: my-app
env: Production
-- input.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: test
data:
  upper: {{ .Values.name | upper }}
  lower: {{ .Values.env | lower }}
  title: {{ .Values.name | title }}
-- output.cue --
import "strings"

#values: {
	name!: bool | number | string | null
	env!:  bool | number | string | null
	...
}

apiVersion: "v1"
kind:       "ConfigMap"
metadata: name: "test"
data: {
	upper: strings.ToUpper(#values.name)
	lower: strings.ToLower(#values.env)
	title: strings.ToTitle(#values.name)
}
