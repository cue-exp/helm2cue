Conditional with and operator.

-- values.yaml --
name: my-app
enabled: true
ready: true
-- input.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ .Values.name }}
{{- if and .Values.enabled .Values.ready }}
data:
  status: active
{{- end }}
-- helm_output.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: my-app
data:
  status: active
-- output.cue --
import "struct"

_nonzero: {
	#arg?: _
	[if #arg != _|_ {
		[
			if (#arg & int) != _|_ {#arg != 0},
			if (#arg & string) != _|_ {#arg != ""},
			if (#arg & float) != _|_ {#arg != 0.0},
			if (#arg & bool) != _|_ {#arg},
			if (#arg & [...]) != _|_ {len(#arg) > 0},
			if (#arg & {...}) != _|_ {(#arg & struct.MaxFields(0)) == _|_},
			false,
		][0]
	}, false][0]
}

#values: {
	name?:    _
	enabled?: _
	ready?:   _
	...
}

apiVersion: "v1"
kind:       "ConfigMap"
metadata: {
	name: #values.name
}
if (_nonzero & {#arg: #values.enabled, _}) && (_nonzero & {#arg: #values.ready, _}) {
	data: {
		status: "active"
	}
}
