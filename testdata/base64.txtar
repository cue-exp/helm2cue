Base64 encode and decode functions.

-- values.yaml --
secret: hello
-- input.yaml --
apiVersion: v1
kind: Secret
metadata:
  name: test
data:
  encoded: {{ .Values.secret | b64enc }}
-- helm_output.yaml --
apiVersion: v1
kind: Secret
metadata:
  name: test
data:
  encoded: aGVsbG8=
-- output.cue --
import "encoding/base64"

#values: {
	secret!: bool | number | string | null
	...
}

apiVersion: "v1"
kind:       "Secret"
metadata: name: "test"
data: encoded: base64.Encode(null, #values.secret)
