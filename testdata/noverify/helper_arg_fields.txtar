Helper that accesses fields on its argument via {{ .name }} and {{ .version }}.
No round-trip: parametric helper output cannot be validated without
concrete fixture values.

-- _helpers.tpl --
{{- define "myapp.labels" -}}
app: {{ .name }}
version: {{ .version }}
{{- end -}}
-- input.yaml --
metadata:
  labels:
    {{ include "myapp.labels" . | nindent 4 }}
-- output.cue --
_myapp_labels: {
	#arg: {
		name?:    bool | number | string | null
		version?: bool | number | string | null
		...
	}
	app:     #arg.name
	version: #arg.version
}

output: [
	{
		metadata: labels: _myapp_labels
	},
]
