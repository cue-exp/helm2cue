Variable assignment and reference.
No round-trip: parametric helper output cannot be validated without
concrete fixture values.

-- _helpers.tpl --
{{- define "myapp.labels" -}}
app: myapp
{{- end -}}

-- input.yaml --
apiVersion: v1
kind: Service
metadata:
  {{- $labels := include "myapp.labels" . }}
  labels: {{ $labels }}
-- output.cue --
_myapp_labels: app: "myapp"

apiVersion: "v1"
kind:       "Service"
metadata: labels: _myapp_labels
