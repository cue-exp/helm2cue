Template directive ({{ template }}) with a field expression argument.
No round-trip: parametric helper output cannot be validated without
concrete fixture values.

-- _helpers.tpl --
{{- define "myapp.name" -}}
{{ . }}
{{- end -}}
-- input.yaml --
name: {{ template "myapp.name" .Values.name }}
-- output.cue --
#values: {
	name!: bool | number | string | null
	...
}
_myapp_name: {
	#arg: _
	#arg
}

name: _myapp_name & {#arg: #values.name, _}
