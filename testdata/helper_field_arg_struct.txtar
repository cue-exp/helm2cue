Structural helper accessing argument fields, called with a field expression.

-- _helpers.tpl --
{{- define "myapp.labels" -}}
app: {{ .name }}
version: {{ .version }}
{{- end -}}
-- input.yaml --
metadata:
  labels:
    {{ include "myapp.labels" .Values.meta | nindent 4 }}
-- output.cue --
#values: {
	meta?: _
	...
}
_myapp_labels: {
	#arg: {
		name?:    _
		version?: _
		...
	}
	app:     #arg.name
	version: #arg.version
}

metadata: {
	labels: _myapp_labels & {#arg: #values.meta, _}
}
